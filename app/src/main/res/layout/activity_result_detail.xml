<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context=".ResultDetail"
    android:padding="5dip"
    android:background="@color/background"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        >
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dip"
            app:cardCornerRadius="15dip"

            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dip"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    >
                    <TextView
                        android:id="@+id/txtExamTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Internals 1"
                        android:textSize="24sp"

                        />
                    <TextView
                        android:id="@+id/txtCourseTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="PHP course"
                        android:textSize="14sp"


                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="10dip"
                        android:paddingTop="5dip"
                        >
                        <ImageView
                            android:layout_width="40dip"
                            android:layout_height="30dip"
                            android:layout_weight="1"

                            android:src="@drawable/calendar">

                        </ImageView>
                        <TextView
                            android:id="@+id/txtDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Title here"
                            android:textSize="14sp"
                            android:layout_weight="1"
                            android:layout_marginLeft="10dip"
                            android:paddingTop="5dip"
                            />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1.5"
                    android:gravity="right"
                    >
                    <TextView
                        android:id="@+id/txtPercentage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="60.5%"
                        android:textSize="45dip"
                        android:layout_weight="0"
                        android:layout_gravity="right"
                        />
                    <TextView
                        android:id="@+id/txtClass"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="First Class"
                        android:textSize="14sp"
                        android:gravity="right"
                        />
                    <TextView
                        android:id="@+id/txtTotalMarks"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="65/90"
                        android:textSize="24sp"
                        android:gravity="right"
                        />

                </LinearLayout>


            </LinearLayout>
            
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dip"
            app:cardCornerRadius="15dip"
            android:backgroundTint="@color/colorRed"
            >
            <TextView
                android:padding="10dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="Subjects"
                android:textSize="24sp"
                android:textColor="@color/white"
                />
        </androidx.cardview.widget.CardView>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/examResultSubjectRview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dip"
            />

    </LinearLayout>
    <ProgressBar
        android:id="@+id/resultLoading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        tools:ignore="InvalidId" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>